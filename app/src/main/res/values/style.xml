<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommonTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="WorkingsTextView" parent="CommonTextView">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ResultTextView" parent="CommonTextView">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="CommonButtonStyle">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonStyleEquals" parent="CommonButtonStyle">
        <item name="android:layout_weight">2</item>
    </style>
</resources>